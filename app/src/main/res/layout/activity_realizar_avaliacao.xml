<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".atividades.RealizarAvaliacao">

    <TextView
        android:id="@+id/avaliador_titulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:text="AVALIADOR"
        android:textSize="26dp" />

    <com.luandkg.czilda4.escola.widgets.CaixaDeAtividade
        android:id="@+id/avaliador_caixa"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:id="@+id/avaliador_area1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">



        <Button
            android:id="@+id/avaliador_nota1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="A1" />

        <Button
            android:id="@+id/avaliador_nota2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="A2" />

        <Button
            android:id="@+id/avaliador_nota3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="A3" />

        <Button
            android:id="@+id/avaliador_nota4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="A4" />

        <Button
            android:id="@+id/avaliador_nota5"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="A5" />

        <Button
            android:id="@+id/avaliador_recuperacao"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="RC" />

        <Button
            android:id="@+id/avaliador_notafinal"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="F" />

    </LinearLayout>



    <ListView
        android:id="@+id/avaliador_lista"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="5dp"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/avaliador_area2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/avaliador_salvar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="Salvar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/avaliador_area4"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/avaliador_nao"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#f4511e"
            android:text="0"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/avaliador_sim"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="#43a047"
            android:textAlignment="center"
            android:text="0"
            android:textSize="32dp" />

    </LinearLayout>




</LinearLayout>