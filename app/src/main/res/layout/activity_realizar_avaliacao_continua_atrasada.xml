<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".atividades.RealizarAvaliacaoContinuaAtrasadaActivity">


    <TextView
        android:id="@+id/atrasada_avaliador_continuo_titulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="AVALIADOR CONTINUO"
        android:textAlignment="center"
        android:textSize="26dp" />


    <com.luandkg.czilda4.escola.widgets.CaixaDeAtividade
        android:id="@+id/atrasada_avaliador_continuo_caixa"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp" />

    <ListView
        android:id="@+id/atrasada_avaliador_continuo_lista"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="5dp"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/atrasada_avaliador_continuo_area2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/atrasada_avaliador_continuo_salvar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="Salvar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/atrasada_avaliador_continuo_area4"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/atrasada_avaliador_continuo_nao"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#f4511e"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/atrasada_avaliador_continuo_sim"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#43a047"
            android:textSize="32dp" />

    </LinearLayout>


</LinearLayout>