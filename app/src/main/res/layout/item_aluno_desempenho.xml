<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_aluno_desempenho"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_aluno_desempenho_imagem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/item_aluno_desempenho_area1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_aluno_desempenho_nome"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:text="Nome"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_aluno_desempenho_status"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:text="Nome"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_aluno_desempenho_area2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_aluno_desempenho_tempo"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="11 de Nov"
            android:textAlignment="center"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/item_aluno_desempenho_mais"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="-3dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="15dp" />


    </LinearLayout>


</LinearLayout>